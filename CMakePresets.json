{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "displayName": "Base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "warnings": {
        "dev": true,
        "deprecated": true
      }
    },
    {
      "name": "base-multi",
      "displayName": "Multi-config",
      "inherits": "base",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo"
      }
    },
    {
      "name": "windows",
      "displayName": "Base Windows",
      "inherits": "base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION_RELEASE": "ON",
        "VCPKG_INSTALLED_DIR": "${sourceDir}/vcpkg_installed",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static",
        "VCPKG_HOST_TRIPLET": "x64-windows-static",
        "VCPKG_INSTALL_OPTIONS": "--disable-metrics;--clean-packages-after-build;--no-binarycaching"
      },
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    },
    {
      "name": "windows-clang",
      "displayName": "Base Windows clang-cl",
      "inherits": "windows",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang-cl"
      }
    },
    {
      "name": "windows-multi",
      "displayName": "Multi-config Windows",
      "inherits": [
        "base-multi",
        "windows"
      ]
    },
    {
      "name": "windows-multi-clang",
      "displayName": "Multi-config Windows clang-cl",
      "inherits": [
        "base-multi",
        "windows-clang"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "base-multi-debug",
      "displayName": "Debug",
      "configurePreset": "base-multi",
      "configuration": "Debug"
    },
    {
      "name": "base-multi-release",
      "displayName": "Release",
      "configurePreset": "base-multi",
      "configuration": "Release"
    },
    {
      "name": "windows-multi-debug",
      "displayName": "Debug",
      "configurePreset": "windows-multi",
      "configuration": "Debug"
    },
    {
      "name": "windows-multi-release",
      "displayName": "Release",
      "configurePreset": "windows-multi",
      "configuration": "Release"
    },
    {
      "name": "windows-multi-relwithdebinfo",
      "displayName": "RelWithDebInfo",
      "configurePreset": "windows-multi",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "windows-multi-clang-debug",
      "displayName": "Debug",
      "configurePreset": "windows-multi-clang",
      "configuration": "Debug"
    },
    {
      "name": "windows-multi-clang-release",
      "displayName": "Release",
      "configurePreset": "windows-multi-clang",
      "configuration": "Release"
    },
    {
      "name": "windows-multi-clang-relwithdebinfo",
      "displayName": "RelWithDebInfo",
      "configurePreset": "windows-multi-clang",
      "configuration": "RelWithDebInfo"
    }
  ]
}
