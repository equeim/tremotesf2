{
    "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
    "dependencies": [
        {
            "name": "qtbase",
            "host": true,
            "default-features": false
        },
        {
            "name": "qtbase",
            "default-features": false,
            "features": [
                "brotli",
                "concurrent",
                "gui",
                "network",
                "pcre2",
                "png",
                "testlib",
                "thread",
                "widgets",
                {
                    "name": "openssl",
                    "platform": "!windows"
                }
            ]
        },
        {
            "name": "qttools",
            "host": true,
            "default-features": false,
            "features": [
                "linguist"
            ]
        },
        {
            "name": "qttranslations",
            "host": true
        },
        "qtsvg",
        "fmt",
        {
            "name": "openssl",
            "platform": "!windows"
        },
        "kf6widgetsaddons",
        "cxxopts",
        "cpp-httplib",
        {
            "name": "pkgconf",
            "platform": "windows",
            "host": true
        }
    ]
}
